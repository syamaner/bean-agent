# First Crack Detection MCP - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Auth0 Configuration
# ============================================
# Inherits from root .env, or set here
# AUTH0_DOMAIN=your-tenant.auth0.com
# AUTH0_AUDIENCE=https://coffee-roasting-api

# ============================================
# Model Configuration
# ============================================
# Path to trained AST model checkpoint
MODEL_PATH=experiments/final_model/model.pt

# Model device (auto-detect if not set)
# Options: mps (Apple Silicon), cuda (NVIDIA), cpu
# MODEL_DEVICE=mps

# ============================================
# HTTP Server Configuration
# ============================================
FIRST_CRACK_DETECTION_PORT=5001

# Enable for development (auto-reload on code changes)
HTTP_DEBUG=false

# ============================================
# Detection Configuration (Defaults)
# ============================================
# These can be overridden per-request
DEFAULT_THRESHOLD=0.5
DEFAULT_MIN_POPS=3
DEFAULT_CONFIRMATION_WINDOW=30.0
DEFAULT_MIN_GAP=10.0
