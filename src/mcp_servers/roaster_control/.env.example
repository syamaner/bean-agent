# Roaster Control MCP - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Auth0 Configuration
# ============================================
# Inherits from root .env, or set here
# AUTH0_DOMAIN=your-tenant.auth0.com
# AUTH0_AUDIENCE=https://coffee-roasting-api

# ============================================
# Roaster Hardware Configuration
# ============================================
# Set to 0 for real hardware, 1 for mock simulation
ROASTER_MOCK_MODE=1

# USB serial port for Hottop roaster
# Find with: ls /dev/tty.usb*
ROASTER_PORT=/dev/tty.usbserial-DN016OJ3

# ============================================
# HTTP Server Configuration
# ============================================
HTTP_HOST=0.0.0.0
HTTP_PORT=5002

# Enable for development (auto-reload on code changes)
HTTP_DEBUG=false
